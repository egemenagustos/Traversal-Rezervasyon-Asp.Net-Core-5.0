@using Traversal_Rezervasyon_Asp.Net_Core_5._0.Areas.Admin.Models
@model List<AnnouncementListViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">Duyuru Listesi</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>İçerik</th>
                    <th>Detaylar</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.Content</td>
                        <td><a href="#" class="btn btn-sm btn-outline-success">Detaylar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

