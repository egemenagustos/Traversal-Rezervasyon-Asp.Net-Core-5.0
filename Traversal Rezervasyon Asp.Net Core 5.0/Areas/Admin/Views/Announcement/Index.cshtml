@model List<DTOLayer.DTOs.AnnouncementDTOs.AnnouncementListDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">Duyuru Listesi</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>İçerik</th>
                    <th>Detaylar</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AnnouncementID</td>
                        <td>@item.Title</td>
                        <td>@item.Content</td>
                        <td><a href="#" class="btn btn-sm btn-outline-primary">Detaylar</a></td>
                        <td><a href="/Admin/Announcement/DeleteAnnouncement/@item.AnnouncementID" class="btn btn-sm btn-outline-danger">Sil</a></td>
                        <td><a href="/Admin/Announcement/UpdateAnnouncement/@item.AnnouncementID" class="btn btn-sm btn-outline-success">Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br />
<a href="/Admin/Announcement/AddAnnouncement/" class="btn btn-sm btn-outline-secondary">Yeni Duyuru Ekle</a>

