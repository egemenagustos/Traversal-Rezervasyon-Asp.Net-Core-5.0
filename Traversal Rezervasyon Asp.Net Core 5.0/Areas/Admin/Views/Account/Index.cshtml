@model AccountViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xxl">
    <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Unit Of Work Prim Transferi</h5>
        </div>

        <div class="card-body">

            <form method="post">
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Gönderen</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="ReceiverID" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Alıcı</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="SenderID" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Miktar</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Amount" />
                    </div>
                </div>




                <div class="row justify-content-end">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Hesaba Aktar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

