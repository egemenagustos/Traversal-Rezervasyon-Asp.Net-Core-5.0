@using EntityLayer.Concrete
@model List<Destination>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">Tur Rotları</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Şehir</th>
                    <th>Fiyat</th>
                    <th>Kapasite</th>
                    <th>Sitede Gör</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach(var item in Model)
                {
                <tr>
                    <td>@item.DestinationID</td>
                    <td>@item.City</td>
                    <td>@item.Price ₺</td>
                    <td>@item.Capacity</td>
                    <td><a href="#" class="btn btn-sm btn-outline-primary">Sitede Gör</a></td>
                    <td><a href="/Admin/Destination/DeleteDestination/@item.DestinationID" class="btn btn-sm btn-outline-danger">Sil</a></td>
                    <td><a href="/Admin/Destination/UpdateDestination/@item.DestinationID" class="btn btn-sm btn-outline-success">Güncelle</a></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br />
<a href="/Admin/Destination/AddDestination/" class="btn btn-sm btn-outline-dark">Yeni Tur Rotası</a>