@model EntityLayer.Concrete.Destination
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "UpdateDestination";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xxl">
    <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Yeni Rota Oluşturma</h5>
            <small class="text-muted float-end">Default label</small>
        </div>

        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="DestinationID" />
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Şehir</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="City" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Gün Gece</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="DayNight" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Fiyat ₺</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Price" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Ana Görsel</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Image" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Kapasite</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Capacity" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Kapak Görseli</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="CoverImage" />
                    </div>
                </div>


                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Görsel 2</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Image2" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Detay 1</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" asp-for="Details1"></textarea>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Detay 2</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" asp-for="Details2"></textarea>
                    </div>
                </div>

                <div class="row justify-content-end">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Oluştur</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>


