@model List<ApiMovieViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">Api IMDB Top 100 Film Listesi</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Film Adı</th>
                    <th>Kapak Resmi</th>
                    <th>Imdb Puanı</th>
                    <th>Yapım Yılı</th>
                    <th>Fragman</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.rank</td>
                        <td>@item.title</td>
                        <td><img class="rounded" src="@item.image" width="100" height="150" /></td>
                        <td>@item.rating</td>
                        <td>@item.year</td>
                        <td><a href="@item.trailer" class="btn btn-sm btn-outline-dark">Fragmanı İzle</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

