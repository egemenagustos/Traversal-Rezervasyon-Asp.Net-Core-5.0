@using EntityLayer.Concrete
@model List<Reservation>

@{
    ViewData["Title"] = "ReservationUser";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<div class="card">
    <h5 class="card-header">Kullanıcının Geçmiş Rezervasyonları</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Ad Soyad</th>
                    <th>Rota</th>
                    <th>Kişi Sayısı</th>
                    <th>Tarih</th>
                    <th>Detaylar</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    sayac = sayac + 1;
                    <tr>
                        <td>@sayac</td>
                        <td>###</td>
                        <td>@item.Destination.City</td>
                        <td>@item.PersonCount</td>
                        <td>@(((DateTime)item.ReservationDate).ToString("dd-MMM-yyyy"))</td>
                        <td><a href="#" class="btn btn-sm btn-outline-secondary">Detaylar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

