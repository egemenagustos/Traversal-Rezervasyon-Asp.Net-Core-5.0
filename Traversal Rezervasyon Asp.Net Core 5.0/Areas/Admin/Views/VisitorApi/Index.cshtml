@model List<VisitorViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">Rehber Listesi</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Şehir</th>
                    <th>Ülke</th>
                    <th>Mail</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.VisitorID</td>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.City</td>
                        <td>@item.Country</td>
                        <td>@item.Mail</td>
                        <td><a href="/Admin/VisitorApi/DeleteVisitor/@item.VisitorID/" class="btn btn-sm btn-outline-danger">Sil</a></td>
                        <td><a href="/Admin/VisitorApi/UpdateVisitor/@item.VisitorID/" class="btn btn-sm btn-outline-success">Güncelle</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br />
<a href="/Admin/VisitorApi/CreateVisitor/" class="btn btn-sm btn-outline-primary">Yeni Ziyaretçi Girişi</a>
