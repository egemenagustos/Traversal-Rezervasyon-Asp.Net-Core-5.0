@using EntityLayer.Concrete
@model List<Guide>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<div class="card">
    <h5 class="card-header">Rehber Listesi</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Görsel</th>
                    <th>Ad Soyad</th>
                    <th>Açıklama</th>
                    <th>Durum</th>
                    <th>Düzenle</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    sayac = sayac + 1;
                    <tr>
                        <td>@sayac</td>
                        <td>
                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                <li data-bs-toggle="tooltip"
                                data-popup="tooltip-custom"
                                data-bs-placement="top"
                                class="avatar avatar-xs pull-up"
                                title="@item.Name">
                                    <img src="@item.Image" alt="Avatar" class="rounded-circle" />
                                </li>
                            </ul>
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        @if (item.Status == true)
                        {
                            <td><a href="/Admin/Guide/ChangeToFalse/@item.GuideID" class="btn btn-sm btn-outline-danger">Pasif Yap</a></td>
                        }
                        else
                        {
                            <td><a href="/Admin/Guide/ChangeToTrue/@item.GuideID" class="btn btn-sm btn-outline-success">Aktif Yap</a></td>
                        }
                        <td><a href="/Admin/Guide/EditGuide/@item.GuideID" class="btn btn-sm btn-outline-success">Düzenle</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br />
<a href="/Admin/Guide/AddGuide/" class="btn btn-sm btn-outline-primary">Yeni Rehber Girişi</a>

