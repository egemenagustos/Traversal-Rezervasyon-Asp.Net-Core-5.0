@model List<GetAllGuideQueryResult>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">CQRS MediatR Rehber Listesi</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Rehber Adı</th>
                    <th>Açıklama</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.GuideID</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td><a href="/Admin/GuideMediatR/DeleteDestination/@item.GuideID" class="btn btn-sm btn-outline-danger">Sil</a></td>
                        <td><a href="/Admin/GuideMediatR/GetGuides/@item.GuideID" class="btn btn-sm btn-outline-success">Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br />
<a href="/Admin/GuideMediatR/AddGuide/" class="btn btn-sm btn-outline-primary">Yeni Tur Girişi</a>

