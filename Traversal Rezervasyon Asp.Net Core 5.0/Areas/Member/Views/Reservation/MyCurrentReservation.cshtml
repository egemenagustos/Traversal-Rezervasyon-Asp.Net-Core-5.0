@model List<Reservation>

@{
    ViewData["Title"] = "MyCurrentReservation";
    Layout = "~/Areas/Member/Views/Shared/_UserLayout.cshtml";
}

<h1>Aktif Rezervasyonlarım</h1>

<table class="table table-bordered">
    <tr>
        <th>Lokasyon</th>
        <th>Kişi Sayısı</th>
        <th>Tarih</th>
        <th>Durum</th>
    </tr>
    @foreach (var item in Model)
    {
            <tr>
                <td>@item.Destination.City</td>
                <td>@item.PersonCount</td>
                <td>@(((DateTime)item.ReservationDate).ToString("dd-MMM-yyyy"))</td>
                <td>@item.Status</td>
            </tr>
    }
</table>

