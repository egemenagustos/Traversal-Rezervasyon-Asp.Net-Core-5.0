@model Reservation

@{
    ViewData["Title"] = "NewReservation";
    Layout = "~/Areas/Member/Views/Shared/_UserLayout.cshtml";
}

<h1>Yeni Rezervasyon Sayfası</h1>

<form method="post" asp-action="NewReservation" asp-controller="Reservation" asp-area="Member">

    <label>Lokasyon</label>
    <select asp-items=@ViewBag.Values asp-for="Status" class="form-control"></select>
    <br />

    <label>Kişi Sayısı</label>
    <input type="text" class="form-control" asp-for="PersonCount" />
    <br />

    <label>Tarih</label>
    <input type="date" class="form-control" asp-for="ReservationDate" />
    <br />

    <label>Not</label>
    <textarea class="form-control" asp-for="Description"></textarea>
    <br />

    <button class="btn btn-sm btn-outline-dark" 
    onclick="alert('Rezervasyonunuz başlangıçta onay bekliyor şeklinde alınacaktır.Rezervasyon onaylanma süreci için güncel rezervasyonlarım menüsünü takip etmeyi unutmayın');">
    Rezervasyon Oluştur</button>

</form>

