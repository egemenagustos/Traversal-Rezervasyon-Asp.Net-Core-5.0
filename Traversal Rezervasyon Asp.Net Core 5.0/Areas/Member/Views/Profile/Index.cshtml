@using Traversal_Rezervasyon_Asp.Net_Core_5._0.Areas.Member.Models
@model UserEditViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_UserLayout.cshtml";
}

<h1>Profilim</h1>

<form method="post" enctype="multipart/form-data" asp-action="Index" asp-controller="Profile" asp-area="Member">

    <label>Adınız</label>
    <input type="text" class="form-control" asp-for=Name/>
    <br />
    <label>Soyadınız</label>
    <input type="text" class="form-control" asp-for=SurName />
    <br />
    <label>Mail Adresiniz</label>
    <input type="text" class="form-control" asp-for=Mail />
    <br />
    <label>Şifreniz</label>
    <input type="text" class="form-control" asp-for=Password />
    <br />
    <label>Şifre Tekrar</label>
    <input type="text" class="form-control" asp-for=ConfirmPassword />
    <br />
    <label>Telefon Numarası</label>
    <input type="text" class="form-control" asp-for=PhoneNumber />
    <br />
    <label>Resim Seçiniz</label>
    <input type="file" class="form-control" asp-for="Image" />
    <br />
    <button class="btn btn-sm btn-success">Kaydet</button>

</form>

